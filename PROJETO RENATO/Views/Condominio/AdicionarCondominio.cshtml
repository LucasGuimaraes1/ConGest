@model PROJETO_RENATO.Models.Condominio

@{
    ViewData["Title"] = "AdicionarCondominio";
    ViewData["NomeUsuario"] = ViewBag.Usuario.Nome;
}

<h1>Adicionar Condominio</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarCondominio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Nome do Condominio
                <input asp-for="NomeCondominio" class="form-control" />
                <span asp-validation-for="NomeCondominio" class="text-danger"></span>
            </div>
            <div class="form-group">
                CNPJ
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                Endereço
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" asp-route-usuarioId="@ViewBag.Usuario.UsuarioId" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Voltar a lista", "ListarCondominios", "Condominio", new { id = ViewBag.Usuario.UsuarioId }, new { @class = "btn btn-primary" })
</div>


