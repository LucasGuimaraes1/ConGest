@model PROJETO_RENATO.Models.Condominio

@{
    ViewData["Title"] = "editar";
    ViewData["NomeUsuario"] = ViewBag.Usuario.Nome;
}

<h1>Editar Condomínio</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCondominio" />
            <div class="form-group">
                <label asp-for="NomeCondominio" class="control-label"></label>
                <input asp-for="NomeCondominio" class="form-control" />
                <span asp-validation-for="NomeCondominio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" asp-route-usuarioId="@ViewBag.Usuario.UsuarioId" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Voltar à lista de condomínios", "ListarCondominios", "Condominio", new { id = ViewBag.Usuario.UsuarioId}, new { @class="btn btn-primary"})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
