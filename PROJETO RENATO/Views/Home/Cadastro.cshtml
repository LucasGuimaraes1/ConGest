@model PROJETO_RENATO.Models.Usuario

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastre o usuário de sua empresa</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastro" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Nome do Usuário
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                Usuario de Acesso
                <input asp-for="UsuarioAcesso" class="form-control" />
                <span asp-validation-for="UsuarioAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                Senha de Acesso
                <input type="password" asp-for="SenhaAcesso" class="form-control" />
                <span asp-validation-for="SenhaAcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                Senha Administrativa
                <input type="password" asp-for="SenhaVerificacao" class="form-control" />
                <span asp-validation-for="SenhaVerificacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" id="btnCreateUsuario">Criar</button>
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Voltar a tela de Login", "Index", "Home", null, new { @class="btn btn-primary"})
</div>